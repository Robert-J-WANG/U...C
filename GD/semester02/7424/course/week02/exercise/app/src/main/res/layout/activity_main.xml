<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/teal_800"
        android:gravity="center"
        android:text="Week2  Exercise"
        android:textColor="@color/white"
        android:textSize="35sp" />
    <Button
        android:id="@+id/btn_exes1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        android:text="@string/exercise_1"
        android:textSize="30sp"
        android:textColor="@color/purple_700"
        android:background="@drawable/bg_border_btn"
        />

    <Button
        android:id="@+id/btn_exes2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/exercise_2"
        android:textSize="30sp"
        android:textColor="@color/purple_700"
        android:background="@drawable/bg_border_btn"
        />
    <Button
        android:id="@+id/btn_exes3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/exercise_3"
        android:textSize="30sp"
        android:textColor="@color/purple_700"
        android:background="@drawable/bg_border_btn"
        />
    <Button
        android:id="@+id/btn_exes4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/exercise_4"
        android:textSize="30sp"
        android:textColor="@color/purple_700"
        android:background="@drawable/bg_border_btn"
        />

</LinearLayout>